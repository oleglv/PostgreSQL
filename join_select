SELECT name_author, name_genre
FROM
	author a 
	INNER JOIN book b ON a.author_id=b.author_id
	INNER JOIN genre g ON b.genre_id=g.genre_id
GROUP BY name_author, name_genre, g.genre_id
HAVING g.genre_id IN
	(SELECT t1.genre_id
	FROM 
	(/*Вычисляем количество экземпляров для каждого жанра*/
		SELECT genre_id, SUM(amount)sum_amount
		FROM book
		GROUP BY genre_id
	) t1 
	INNER JOIN
	(/*находим жанр с максимальным количеством экземпляров*/
		SELECT genre_id, SUM(amount)sum_amount
		FROM book
		GROUP BY genre_id
		ORDER BY sum_amount DESC 
		LIMIT 1
	) t2 
	ON t1.sum_amount=t2.sum_amount );
